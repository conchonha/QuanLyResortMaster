<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D0F4D8"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/picture_height"
            android:background="#14051D0E"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/deluxe_4" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:background="#14051D0E"
            android:gravity="center"
            android:textStyle="bold"
            android:text="PHÒNG DELUXE"
            android:textColor="#191818"
            android:textSize="25dp" />

        <ImageView
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="20dp"
            app:srcCompat="@drawable/hv" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:gravity="center"
            android:textColor="#590C20"
            android:text="Với thiết kế hiện đại, không gian rộng rãi, phòng Deluxe là lựa chọn lý tưởng dành cho các cặp đôi đi hưởng tuần trăng mật.\n
Ban công phòng Deluxe mang đến một tầm nhìn toàn cảnh, đầy đủ màu sắc của thành phố và vịnh biển xinh đẹp. Bạn có thể tận hưởng một buổi tối gần gũi
với gió biển trong lành hoặc một buổi sáng trong ánh bình minh lung linh trên mặt biển."
            android:textSize="18dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:text="Thông tin phòng"
            android:textColor="#191818"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="272dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:textColor="#590C20"
                android:text="• Diện tích: 34m2\n• Ban công hướng biển và thành phố\n• Phòng tắm hiện đại với gương lớn, bồn tắm đặc
biệt với vòi hoa sen và đồ dùng vệ sinh\n• Vách ngăn bằng kính trong phòng tắm\n• Hai vòi sen tắm\n• Tivi HD"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:textColor="#590C20"
                android:text="• Loa bluetooth\n• Két sắt an toàn\n• Máy điều hòa\n• Bàn làm việc\n• Wifi miễn phí\n• Miễn phí 2 chai nước khoáng\n• Miễn phí trà và cafe\n"
                android:textSize="18dp" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#14051D0E"/>
    </LinearLayout>

</ScrollView>