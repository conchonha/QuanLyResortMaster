<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/background_9"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".activity.RutTienActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/rut_tien"
        android:background="#BD820C"
        android:textColor="@color/design_default_color_on_secondary"
        android:textSize="@dimen/fragment_title_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:textColor="#04165E"
            android:text="@string/so_du_trong_vi"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/tvSoDu_actRutTien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:gravity="right"
            android:textColor="#61064E"
            android:textSize="@dimen/text_size" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Rút về thẻ ngân hàng:"
        android:gravity="center"
        android:textColor="@color/design_default_color_on_secondary"
        android:textSize="@dimen/fragment_small_title_size" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:text="@string/ma_the_ngan_hang"
        android:textColor="#04165E"
        android:textSize="@dimen/text_size" />

    <TextView
        android:id="@+id/tvMaTheNganHang_actRutTien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="#61064E"
        android:inputType="textPersonName"
        android:textSize="@dimen/fragment_small_title_size" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nhap_so_tien"
        android:textColor="#04165E"
        android:textSize="@dimen/text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etSoTien_actRutTien"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:ems="10"
            android:textColor="#61064E"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/don_vi_VND"
            android:textSize="@dimen/text_size" />
    </LinearLayout>

    <Button
        android:id="@+id/btRutTien_actRutTien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/rut_tien"
        android:background="#E364C7"
        android:textSize="@dimen/fragment_small_title_size" />

    <TextView
        android:id="@+id/tvError_actRutTien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/design_default_color_error"
        android:textSize="@dimen/text_size" />

</LinearLayout>