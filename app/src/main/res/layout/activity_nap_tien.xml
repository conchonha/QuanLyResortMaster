<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_8"
    android:orientation="vertical"
    tools:context=".activity.NapTienActivity"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:background="#BD820C"
        android:text="@string/nap_tien"
        android:textColor="@color/design_default_color_on_secondary"
        android:textSize="@dimen/fragment_title_size" />

    <TextView
        android:id="@+id/textView6"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#04165E"
        android:text="@string/ma_the_ngan_hang"
        android:textSize="@dimen/text_size" />

    <TextView
        android:id="@+id/tvMaTheNganHang_actNapTien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="#61064E"
        android:inputType="textPersonName"
        android:textSize="@dimen/fragment_small_title_size" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#04165E"
        android:text="@string/nhap_so_tien"
        android:textSize="@dimen/text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etSoTien_actNapTien"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:ems="10"
            android:textColor="#61064E"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/don_vi_VND"
            android:textSize="@dimen/text_size" />
    </LinearLayout>

    <Button
        android:id="@+id/btNapTien_actNapTien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E364C7"
        android:text="Nạp tiền"
        android:textSize="@dimen/fragment_small_title_size" />

    <TextView
        android:id="@+id/tvError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/design_default_color_error"
        android:textSize="@dimen/text_size" />

</LinearLayout>